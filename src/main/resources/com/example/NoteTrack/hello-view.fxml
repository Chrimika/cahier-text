<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="240.0" prefWidth="466.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.NoteTrack.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="Login" textAlignment="CENTER" wrapText="true">
      <font>
         <Font name="Segoe UI Bold" size="12.0" />
      </font>
   </Label>
   <Label fx:id="welcomeText" text="Label" wrapText="true" />
    <VBox alignment="BASELINE_CENTER" />
   <GridPane prefHeight="77.0" prefWidth="426.0" vgap="10.0">
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" maxWidth="206.0" minWidth="10.0" prefWidth="89.66666666666667" />
       <ColumnConstraints hgrow="SOMETIMES" maxWidth="335.6666666666667" minWidth="10.0" prefWidth="335.6666666666667" />
     </columnConstraints>
     <rowConstraints>
         <RowConstraints maxHeight="52.0" minHeight="10.0" prefHeight="15.0" vgrow="SOMETIMES" />
         <RowConstraints maxHeight="42.0" minHeight="0.0" prefHeight="0.0" vgrow="SOMETIMES" />
         <RowConstraints maxHeight="42.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
           <Label GridPane.rowIndex="2">Password:</Label>
           <Label>Username:</Label>
         <TextField fx:id="inputUsername" alignment="BOTTOM_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="33.0" prefWidth="280.0" GridPane.columnIndex="1" />
         <TextField fx:id="inputPassword" onKeyPressed="#HidePassword" prefHeight="35.0" prefWidth="336.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      </children>
   </GridPane>
    <Button onAction="#onHelloButtonClick" style="-fx-background-color: #162d3a;" text="Login" textFill="WHITE">
      <font>
         <Font size="14.0" />
      </font>
    </Button>


</VBox>
